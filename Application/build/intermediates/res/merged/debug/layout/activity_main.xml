<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/sample_main_layout">

    <GridView
        android:background="@drawable/chessboard"
        android:id ="@+id/GridView01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:numColumns="8"
        android:stretchMode="columnWidth"
        android:layout_gravity="center"
        >
    </GridView>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:id="@+id/Turn"
            android:text="White Turn"
            android:textSize="40dp"
            android:textColor="#FFFFFF"
            />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Surrender"
        android:text="Surrender"
        android:layout_gravity="center"/>
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Queen"
            android:onClick="OnClick"
            android:text="Promote - Queen"
            android:layout_weight="1"
            android:layout_gravity="center" />
        <Button
            android:onClick="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Knight"
            android:text="Promote - Knight"
            android:layout_weight="1"
            android:layout_gravity="center" />
        <Button
            android:onClick="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Bishop"
            android:text="Promote - Bishop"
            android:layout_weight="1"
            android:layout_gravity="center" />
        <Button
            android:onClick="OnClick"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/Rook"
            android:text="Promote - Rook"
            android:layout_weight="1"
            android:layout_gravity="center"/>
    </LinearLayout>
    <FrameLayout
        android:id="@+id/sample_content_fragment"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0px" />

</LinearLayout>